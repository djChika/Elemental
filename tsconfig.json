{
  "rootDir": "src",
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "strict": false,
    "allowJs": true,
    "noImplicitAny": false,
    "paths": { "src/*": ["./src/*"] }
  },
  "include": ["./src/*"],
  "exclude": ["./node_modules/**/*"],
  "files": ["types/target.ts"]
}
